{
	"gradient": "2a454b 253e45 21373f 1c3139 172a32 13232c 0e1c26",
	"text": "dfdfdf",

	"waybar": {

			"*": {
				"margin": 0,
				"padding": 0,
				"border": 0,
				"border_radius": 0,
				"background_color": "transparent",
				"box-shadow": "none",
				"font-family": "FontAwesome, Source Code Pro, Roboto, Helvetica, Arial",
				"font-size": 14,
				"color": "1e1e1e"
			},

			"#workspaces": {
				"button": {
						"min-width": "45px",
						"padding": "6px 16px 5px 16px",
						"transition-property": "background, padding",
						"transition-duration": ".3s",
						"transition-timing-function": "ease-out",
						"font-weight": "bold",

						":last-child": {
								"border-radius": "0 4px 4px 0"
							},

						".active": {
								"padding-left": "34px",
								"padding-right": "34px"
							},

						":nth-child(INT)": {
								"background": "linear-gradient(90deg, shade(@gradINT, 0.8), @gradINT 4px)"
							},

						":nth-child(INT).active": {
								"background": "linear-gradient(90deg, shade(@gradINT, 0.8), shade(@gradINT, 1.1) 4px)"
							},
						
						"nth-child(INT):hover": {
								"background": "linear-gradient(90deg, shade(@gradINT, 0.8), shade(@gradINT, 1.2) 4px)"
							}
					}
			},

			"#window": {
					"color": "f1f1f1",
					"font-weight": "bold",
					"margin": "2px 20px 0 20px"
				}
		}
}
